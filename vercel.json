{
  "version": 2,
  "functions": {
    "backend/app.py": {
      "runtime": "python3.9"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/app.py"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "env": {
    "DATABASE_URL": "@database_url",
    "JWT_SECRET_KEY": "@jwt_secret_key",
    "REDIS_URL": "@redis_url"
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend/app.py"
    }
  ],
  "outputDirectory": "frontend"
}